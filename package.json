{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js",
      "!dist/tests/**/fixtures/**/*.js"
    ],
    "timeout": "1m"
  },
  "dependencies": {
    "@destinationstransfers/ntp": "^2.0.0",
    "@hint/configuration-all": "^1.0.3",
    "@hint/utils": "^4.1.0",
    "applicationinsights": "^1.4.1",
    "azure-sb": "^0.11.1",
    "debug": "^4.1.1",
    "hint": "^5.2.2",
    "lodash": "^4.17.15",
    "pkill": "^2.0.0",
    "puppeteer": "^1.19.0",
    "request": "^2.88.0",
    "shx": "^0.3.2",
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.0.1",
    "tri": "^1.0.2"
  },
  "devDependencies": {
    "@types/azure": "^0.9.20",
    "@types/chrome": "^0.0.88",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.137",
    "@types/node": "^12.7.2",
    "@types/proxyquire": "^1.3.28",
    "@types/puppeteer": "^1.19.1",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "ava": "^2.3.0",
    "cpx": "^1.5.0",
    "eslint": "^6.2.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-markdown": "^1.0.0",
    "eventemitter2": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "sinon": "^7.4.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "main": "./dist/src/index.js",
  "private": true,
  "scripts": {
    "ava": "ava",
    "build": "npm run clean && npm-run-all build:*",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc --outDir dist",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext ts --ignore-pattern dist .",
    "online-service": "node ./dist/src/bin/online-service",
    "test": "npm run lint && npm run build && nyc ava",
    "watch:ts": "npm run build:ts -- --watch",
    "steps": "npm run step1 && npm run step2",
    "step1": "rimraf node_modules/hint && rimraf gitrepos/ && mkdir gitrepos && cd gitrepos && git clone https://github.com/webhintio/hint.git && cd hint && cd packages && cd hint && npm install && npm install @types/is-ci @types/proxyquire && npm run build",
    "step2": "shx mv gitrepos/hint/packages/hint node_modules/"
  },
  "version": "0.16.0"
}
